{
    "type": "object",
    "description": "Table definition",
    "additionalProperties": false,
    "properties": {
        "rows": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "group": {
                        "type": "string"
                    },
                    "cells": {
                        "type": "array",
                        "description": "Cell definitions for row",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "pass": {
                                    "type": "integer",
                                    "description": "Pass on which to evaluate this cell"
                                },
                                "expr": {
                                    "type": "string",
                                    "description": "XPath expression to evaluate for cell value"
                                },
                                "literal": {
                                    "oneOf": [
                                        { "type": "string" },
                                        { "type": "integer" }
                                    ],
                                    "description": "Literal value"
                                },
                                "class": {
                                    "type": "string"
                                },
                                "with_items": {
                                    "type": "array",
                                    "description": "Iterate the cell definition with the given values"
                                }
                            },
                            "required": ["name"]
                        }
                    },
                    "with_items": {
                        "type": "array",
                        "description": "Iterate the row definition with these values"
                    },
                    "with_query": {
                        "type": "string",
                        "description": "Iterate the row definitions for each result from this query"
                    }
                }
            }
        },
        "sort": {
            "oneOf": [
                { "type": "object" },
                { "type": "array" }
            ],
            "description": "Sort the table"
        },
        "classes": {
            "type": "object",
            "description": "Class to definition list",
            "patternProperties": {
                "^.*$": {
                    "type": "array",
                    "description": "List of definitions",
                    "items": {
                        "type": "array",
                        "description": "Definition",
                        "items": [
                            {
                                "type": "string"
                            },
                            {
                                "oneOf": [
                                    { "type": "object" },
                                    { "type": "array" }
                                ]
                            }
                        ]
                    }
                }
            }
        },
        "params": {
            "type": "object",
            "description": "Parameter for this table"
        },
        "includes": {
            "type": "array",
            "items": {
                "type": "array",
                "items": [
                    {
                        "type": "string",
                        "description": "The filename (relative or absolute) to include/merge"
                    },
                    {
                        "type": "array",
                        "description": "List of keys to import from the JSON file",
                        "items": {
                            "type": "string",
                            "enum": [ "classes", "params", "rows", "sort" ]
                        }
                    }
                ]
            }
        }
    },
    "required": ["rows"]
}
